<EditForm Model="Materia" OnValidSubmit="onValidSubmit">
    <DataAnnotationsValidator/>
    <div class="form-group">
        <label>Código</label>
        <div>
            <InputText class="form-control" @bind-Value="@Materia.CodMateria" />
            <ValidationMessage For="@(() => Materia.CodMateria)"/>
        </div>
    </div>
    <div class="form-group">
        <label>Nombre del materia</label>
        <div>
            <InputText class="form-control" @bind-Value="@Materia.NombreMateria" />
            <ValidationMessage For="@(() => Materia.NombreMateria)" />
        </div>
    </div>
    <button class="btn btn-primary" type="submit">Guardar</button>
    <button class="btn btn-secondary" @onclick="onCancel" type="button">Cancelar</button>
</EditForm>

@code {
    [Parameter] public materia Materia { get; set; }
    [Parameter] public EventCallback onValidSubmit { get; set; }
    [Parameter] public EventCallback onCancel { get; set; }
}
